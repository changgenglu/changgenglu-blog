  local tag
  tag=$(_getImageTag "${3}" "${envName}" "${projImageName}") || return 1

  local podName
  podName=$(_getPodName "${4}")

  local registry
  registry=$(_resolveRegistry "${envName}")

  if [ -z "$registry" ]; then
    echo "âŒ éŒ¯èª¤: æœªçŸ¥çš„ç’°å¢ƒ ${envName}" >&2
    return 1
  fi

  _buildPodCommand "${registry}/${projImageName}:${tag}" "${podName}"
}

